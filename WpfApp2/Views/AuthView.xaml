<Window x:Class="WpfApp2.Views.AuthView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2.Views"
        mc:Ignorable="d"
        Title="AuthView" Height="450" Width="800">
    <Grid>
        <TextBox Text="{Binding Path= Login, Mode=OneWayToSource}" Margin="0,0,0,232"></TextBox>
        <TextBox Text="{Binding Path= Password, Mode=OneWayToSource}" Margin="0,287,0,81"></TextBox>
        <Button Command="{Binding Path= AuthCommand}" Margin="0,390,0,0"></Button>
    </Grid>
</Window>
